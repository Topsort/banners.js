{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@topsort/banners",
  "version": "0.0.1-alpha3",
  "description": "A web component for displaying Topsort banner ads.",
  "type": "module",
  "author": "Topsort",
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.6.0"
  },
  "main": "dist/banners.mjs",
  "module": "dist/banners.mjs",
  "license": "MIT",
  "keywords": [
    "banners",
    "web-components",
    "topsort",
    "ads"
  ],
  "homepage": "https://github.com/Topsort/banners.js#readme",
  "exports": {
    ".": {
      "import": "./dist/banners.mjs",
      "types": "./types/index.d.ts"
    }
  },
  "types": "dist/banners.d.ts",
  "files": [
    "dist",
    "types",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite serve",
    "build": "tsc && vite build",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --ext .ts,.js . --fix"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "dependencies": {
    "lit": "^2.3.1"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "printWidth": 100
  }
}
